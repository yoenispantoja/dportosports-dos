includes:
	- phpstan-baseline.neon

parameters:
	level: max
	reportUnmatchedIgnoredErrors: false
	exceptions:
	    check:
	        missingCheckedExceptionInThrows: true
	        tooWideThrowType: true
	paths:
		- src
		- tests
	bootstrapFiles:
		- vendor/php-stubs/wordpress-globals/wordpress-globals.php
		- vendor/php-stubs/wordpress-stubs/wordpress-stubs.php
		- vendor/php-stubs/woocommerce-stubs/woocommerce-stubs.php
		- vendor/php-stubs/woocommerce-stubs/woocommerce-packages-stubs.php
	scanFiles:
		- vendor/antecedent/patchwork/Patchwork.php
	scanDirectories:
	ignoreErrors:
		# Trait is used via getMockForTrait in tests, PHPStan can't detect this
		-
			message: '#^Trait GoDaddy\\WordPress\\MWC\\Payments\\Traits\\CanCancelTransactionsTrait is used zero times and is not analysed\.$#'
			path: src/Traits/CanCancelTransactionsTrait.php
